<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/item_bg"
    android:orientation="horizontal">

    <!--左边数据-->
    <LinearLayout
        android:id="@+id/head_left"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/item_bg"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/pre_district"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="北京市-昌平区"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pre_cellname"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:text="天通苑东苑二区"
            android:textColor="@color/blue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pre_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="面积：100.00平方米"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/pre_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评估单价：37982元/平米"
            android:textColor="@color/blue"
            android:textSize="14sp" />
    </LinearLayout>

    <!--右边数据-->
    <LinearLayout
        android:id="@+id/head_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <!--圆-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="评估总价"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pre_total"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="万元"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>